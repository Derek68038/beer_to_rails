<div class="top">
<p><em><h1><%= @style.category %></h1></em></p>
</div>

<div class="style_attributes">
  <div id="attributes">
    <h3>Color</h3>
    <em><%= @style.color %></em>
  </div>

  <div id="attributes">
    <h3>Perceived Bitterness</h3>
    <em><%= @style.bitterness %></em>
  </div>

  <div id="attributes">
    <h3>Alcohol</h3>
    <em><%= @style.alcohol %></em>
  </div>

  <div id="attributes">
    <h3>Flavor and Balance</h3>
    <em><%= @style.flavor %></em>
  </div>

  <div id="attributes">
    <h3>Related Styles</h3>
    <em><%= @style.related %></em>
  </div>

  <div id="attributes">
    <h3>Beer Reviews</h3>
      <% if @beer.length == 0 %>
        <em><%= "There have been no beers entered for this style." %></em>
      <% else %>
      <% @beer.find_each do |b| %>
        <em><h4><em><u><a href="/beers/<%= b.id %>"><%= b.name %></a></u></h4>    
          <ul>
            <li><%= "ID - #{b.id}" %></li>
            <li><%= "Style - #{b.style.category}" %></li>
            <li><%= "Color - #{b.color}" %></li> 
            <li><%= "IBUs - #{b.ibu}" %></li> 
            <li><%= "ABV - #{b.abv}%" %></li>
            <li><%= "Brewery - #{b.breweries_comma_separated}" %></li>
            <li><%= "Review - #{b.review}" %></li>
            <li><%= "Date - #{b.date}" %></li></em>
          </ul>
        <% end %>
      <% end %>
  </div>
</div>


<p id="edit"> <%= link_to("Edit Style", edit_style_path)%> </p>  

<p id="home"> <%= link_to("Return To Homepage", home_path)%> </p>
